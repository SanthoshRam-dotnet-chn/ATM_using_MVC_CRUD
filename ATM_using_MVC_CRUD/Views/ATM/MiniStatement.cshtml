@model IEnumerable<ATM_using_MVC_CRUD.Models.AccountTransaction>
@{
    ViewData["Title"] = "Mini Statement";
}

<h2>Last 10 Transactions</h2>

@if (Model != null && Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Date</th>
                <th>Type</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var t in Model)
            {
                <tr>
                    <td>@t.TransactionDate.ToString("g")</td>
                    <td>@t.Type</td>
                    <td>@t.Amount</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No transactions found.</p>
}

<a href="/ATM/Dashboard" class="btn btn-secondary">Back</a>
