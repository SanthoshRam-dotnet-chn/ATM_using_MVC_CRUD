@model ATM_using_MVC_CRUD.Models.Customer

@{
    ViewData["Title"] = "Delete Customer";
}

<h2>Delete Customer</h2>

@if (Model != null)
{
    <h4>Are you sure you want to delete this customer?</h4>
    <hr />
    <table class="table table-bordered">
        <tr>
            <th>Account Number</th>
            <td>@Model.AccountNumber</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>@Model.Name</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>@Model.Email</td>
        </tr>
        <tr>
            <th>Phone</th>
            <td>@Model.Phone</td>
        </tr>
        <tr>
            <th>PIN</th>
            <td>@Model.Pin</td>
        </tr>
    </table>

    <form asp-action="DeleteCustomer" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="/Customer/Index" class="btn btn-secondary">Cancel</a>
    </form>
}
else
{
    <p>No customer data found.</p>
}
