@model ATM_using_MVC_CRUD.Models.Customer
@{
    ViewData["Title"] = "Customer Details";
}

<h2>Customer Details</h2>

@if (Model != null)
{
    <table class="table table-bordered">
        <tr><th>Account Number:</th><td>@Model.AccountNumber</td></tr>
        <tr><th>Name:</th><td>@Model.Name</td></tr>
        <tr><th>Email:</th><td>@Model.Email</td></tr>
        <tr><th>Phone:</th><td>@Model.Phone</td></tr>
        <tr><th>PIN:</th><td>@Model.Pin</td></tr>
    </table>
}
else
{
    <p>No customer found!</p>
}

<a href="/Customer/Index" class="btn btn-secondary">Back</a>
