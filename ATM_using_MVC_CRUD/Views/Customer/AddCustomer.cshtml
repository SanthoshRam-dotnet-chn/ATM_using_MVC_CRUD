@model ATM_using_MVC_CRUD.Models.Customer
@{
    ViewData["Title"] = "Add Customer";
}

<h2>Add New Customer</h2>

<form asp-action="AddCustomer" method="post" class="form">
    <div class="form-group">
        <label>AccountNumber</label>
        <input asp-for="AccountNumber" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Name</label>
        <input asp-for="Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Phone</label>
        <input asp-for="Phone" class="form-control" required />
    </div>
    <div class="form-group">
        <label>PIN (4 digits)</label>
        <input asp-for="Pin" type="password" maxlength="4" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-success">Create</button>
</form>
